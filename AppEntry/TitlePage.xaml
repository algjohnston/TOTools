<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TOTools.AppEntry.TitlePage"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False"
             Padding="0">

    <ContentPage.Content>
        <AbsoluteLayout HorizontalOptions="Center" VerticalOptions="Center">

            <Image Source="background.png" Aspect="Fill"
                   AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
                   AbsoluteLayout.LayoutFlags="All" />

            <Grid ColumnDefinitions="*"
                  RowDefinitions="*, *, *, *"
                  Margin="16, 40, 16, 16"
                  AbsoluteLayout.LayoutBounds="0, 0, 1, 1"
                  AbsoluteLayout.LayoutFlags="All">

				<Image Source="Images/tot_logo.png"
					   WidthRequest="350"
					   HeightRequest="200"
					   VerticalOptions="Center"
					   HorizontalOptions="FillAndExpand" />


				<Button x:Name="LogInButton"
                        Text="LOG IN"
                        TextColor="Black"
						FontFamily="GoboldBold"
						FontSize="Large"
                        Grid.Row="1"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="120"
                        HeightRequest="50"
                        BackgroundColor="#eebf6d"
                        Clicked="OnLogInButtonClicked" />

                <Button x:Name="SignUpButton"
                        Text="SIGN UP"
                        FontSize="Large"
						FontFamily="GoboldBold"
                        TextColor="Black"
                        Grid.Row="2"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="120"
                        HeightRequest="50"
                        BackgroundColor="#eebf6d"
                        Clicked="OnSignUpButtonClicked" />

                <Button x:Name="SkipButton"
                        Text="SKIP"
                        FontSize="Large"
						FontFamily="GoboldBold"
                        Grid.Row="3"
                        Grid.Column="1"
                        TextColor="#eebf6d"
                        HorizontalOptions="Start"
                        VerticalOptions="End"
                        WidthRequest="120"
                        HeightRequest="50"
                        BackgroundColor="#643f00"
                        Margin="20, 0, 16, 16"
                        Clicked="OnSkipButtonClicked" />

            </Grid>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>
