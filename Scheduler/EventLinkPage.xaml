<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TOTools.Scheduler.EventLinkPage">
    <ContentPage.Content>
        <Grid ColumnDefinitions="*"
              RowDefinitions="*, *, *, *, *, *, *"
              Margin="16">

            <Label Text="Event Link: "
                   FontSize="24"
                   TextColor="AntiqueWhite"
                   Grid.Row="0"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />

            <Entry x:Name="EventLinkEntry"
                   Grid.Row="1"
                   FontSize="16"
                   TextColor="AntiqueWhite"
                   Placeholder="Enter an event link"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />

            <Label Text="Start Time: "
                   Grid.Row="2"
                   FontSize="24"
                   TextColor="AntiqueWhite"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />

            <TimePicker
                Grid.Row="3"
                FontSize="24"
                x:Name="StartTimeEntry"
                TextColor="AntiqueWhite"
                HorizontalOptions="Center"
                VerticalOptions="Center" />

            <Label Text="Number of Concurrent Matches: "
                   Grid.Row="4"
                   FontSize="24"
                   TextColor="AntiqueWhite"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />

            <Entry x:Name="ConcurrentMatchesEntry"
                   Grid.Row="5"
                   TextColor="AntiqueWhite"
                   Keyboard="Numeric"
                   FontSize="24"
                   Placeholder="Enter the number of matches that can be played at once"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
            
            <Entry x:Name="Bo5StartPlacementEntry"
                   Grid.Row="6"
                   TextColor="AntiqueWhite"
                   Keyboard="Numeric"
                   FontSize="24"
                   Placeholder="Enter the placement where Bo5 Starts"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
            
            <Button x:Name="SubmitButton"
                    Text="Submit"
                    FontSize="24"
                    TextColor="AntiqueWhite"
                    FontAttributes="Bold"
                    Grid.Row="6"
                    HorizontalOptions="Start"
                    VerticalOptions="End"
                    Clicked="OnSubmitButtonClicked" />

            <Button x:Name="Cancel"
                    Text="Cancel"
                    TextColor="AntiqueWhite"
                    FontAttributes="Bold"
                    FontSize="24"
                    Grid.Row="6"
                    Grid.Column="1"
                    HorizontalOptions="End"
                    VerticalOptions="End"
                    Clicked="OnCancelButtonClicked" />
        </Grid>
    </ContentPage.Content>
</ContentPage>