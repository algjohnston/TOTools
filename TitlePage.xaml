<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:local="clr-namespace:CS341Project"
			 x:Class="CS341Project.TitleLoginSignup.TitlePage">
	<ContentPage.Content>
	    <Grid ColumnDefinitions="*"
              RowDefinitions="*, *, *"
              Margin="80">
			<Label Text="Title (TBD)"
			       Style="{StaticResource Headline}"
				   FontSize="50"
			       TextColor="Gold"
			       HorizontalTextAlignment="Center"
			       FontAttributes="Bold, Italic" />

			<Button x:Name="LogInButton"
					Text="Log In"
					FontSize="Large"
					FontAttributes="Bold"
					Grid.Row="0"
					Margin="80"
					HeightRequest="100"
					WidthRequest="500"
					Clicked="OnLogInButtonClicked" />

			<Button x:Name="SignUpButton"
					Text="Sign Up"
					FontSize="Large"
					FontAttributes="Bold"
					Grid.Row="1"
					Margin="80"
					HeightRequest="100"
					WidthRequest="500"
					Clicked="OnSignUpButtonClicked" />

			<Button x:Name="SkipButton"
					Text="Skip"
					FontSize="Large"
					FontAttributes="Bold"
					Grid.Row="2"
					Margin="60"
					HeightRequest="100"
					WidthRequest="200"
					HorizontalOptions="Start"
					Clicked="OnSkipButtonClicked" />

		</Grid>
	</ContentPage.Content>
</ContentPage>