<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        x:Class="CS341Project.ThumbGen.ThumbGenPage"
        Title="Thumbnail Generator">

    <Grid ColumnDefinitions="*, *"
          RowDefinitions="*, *, *, *, *"
          Margin="16">
        
        <Label Text="Event Link"
               Grid.Row="0"
               HorizontalOptions="Start"
               VerticalOptions="Center"/>
        
        <Entry x:Name="StartggLinkEntry"
               Grid.Row="0"
               Grid.Column="1"
               Placeholder="Enter Start.gg Event Link"
               VerticalOptions="Center"
               HorizontalOptions="Center"/>

        <Button x:Name="ManualEntryButton" 
            Text="Manual Entry"
            Grid.Row="1"
            Grid.ColumnSpan="2"
            FontAttributes="Bold"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Clicked="OnManualEntryButtonClicked"/>

        <Button x:Name="SelectTemplateButton" 
            Text="Select Template"
            Grid.Row="2"
            Grid.ColumnSpan="2"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            FontAttributes="Bold"
            Clicked="OnSelectTemplateButtonClicked"/>
        
        <Button x:Name="OutputFolderButton" 
            Text="Select Output Folder" 
            Grid.Row="3"
            Grid.ColumnSpan="2"
            FontAttributes="Bold"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Clicked="OnOutputFolderButtonClicked"/>

        <Button x:Name="SubmitButton" 
            Text="Submit" 
            Grid.Row="4"
            Grid.ColumnSpan="2"
            FontAttributes="Bold"
            HorizontalOptions="Start"
            VerticalOptions="End"
            Clicked="OnSubmitButtonClicked"/>
    </Grid>
</ContentPage>