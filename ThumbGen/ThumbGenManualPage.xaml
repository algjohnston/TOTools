<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        x:Class="TOTools.ThumbGen.ThumbGenManualPage"
        Title="Thumbnail Generator">

    <Grid ColumnDefinitions="*"
          RowDefinitions="*, *, *, *"
          Margin="16, 16, 16, 64">

        <Entry x:Name="VodTitleEntry" 
            Grid.Row="0"
            FontSize="Large"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Placeholder="Enter VOD Title"/>

        <Button 
            x:Name="SelectTemplateButton" 
            Text="Select Template"
            Grid.Row="1"
            FontSize="Large"
            FontAttributes="Bold"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Clicked="OnSelectTemplateButtonClicked"/>

        <Button x:Name="OutputFolderButton" 
            Text="Select Output Folder" 
            Grid.Row="2"
            FontSize="Large"
            FontAttributes="Bold"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Clicked="OnOutputFolderButtonClicked"/>

        <Button x:Name="SubmitButton" 
            Text="Submit" 
            Grid.Row="3"
            FontSize="Large"
            FontAttributes="Bold"
            VerticalOptions="End"
            HorizontalOptions="Start"
            Clicked="OnSubmitButtonClicked"/>
    </Grid>
</ContentPage>