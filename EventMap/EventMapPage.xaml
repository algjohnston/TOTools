<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CS341Project"
             x:Class="CS341Project.EventMap.EventMapPage">
    <ContentPage.Content>

        <Grid ColumnDefinitions="*"
              RowDefinitions="auto, *"
              Margin="20">

            <Label
                Text="Event Map"
                Style="{StaticResource Headline}"
                TextColor="White"
                HorizontalTextAlignment="Center"
                FontAttributes="Bold" />

            <Image
                Grid.Row="1"
                Source="wi_map.png"
                Aspect="AspectFit"
                SemanticProperties.Description="Temporary Stand-in Map" />
        </Grid>

    </ContentPage.Content>
</ContentPage>