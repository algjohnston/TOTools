<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CS341Project.EventMap.EventMapPage"
             Title="Event Map">
    <ContentPage.Content>

        <Grid ColumnDefinitions="*"
              RowDefinitions="*, auto"
              Margin="16">
            
            <Image
                Grid.Row="0"
                Source="wi_map.png"
                Aspect="AspectFit"
                SemanticProperties.Description="Temporary Stand-in Map" />
            
            <Button Text="View All Events"
                    Clicked="OnViewAllEventsButtonClicked"
                    Grid.Row="1"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"/>
        </Grid>

    </ContentPage.Content>
</ContentPage>