<?xml version="1.0" encoding="utf-8"?>

<ContentPage 
	        xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
		xmlns:local="clr-namespace:CS341Project"
	        x:Class="CS341Project.EventMap.EventMapPage">

	<ScrollView>
		<VerticalStackLayout
			Padding="30,0"
            		Spacing="25">
			<Label
			    Text="Event Map"
			    Style="{StaticResource Headline}"
			    TextColor="White"
			    HorizontalTextAlignment="Center"
		            FontAttributes="Bold" />
			
			<Image
			    Source="wi_map.png"
			    HeightRequest="185"
                	    Aspect="AspectFit"
			    SemanticProperties.Description="Temporary Stand-in Map"
			    HorizontalOptions="Center" />
		</VerticalStackLayout>
	</ScrollView>

</ContentPage>
