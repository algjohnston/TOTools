<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CS341Project.Seeding.SeedGeneratorPage">
    <ContentPage.Content>

        <Grid ColumnDefinitions="*"
              RowDefinitions="*, *, *"
              Margin="16, 0, 16, 16">

            <StackLayout Grid.Row="0"
                         VerticalOptions="Center">

                <Label Text="Attendee List Page"
                       FontSize="21" />

                <Entry x:Name="EntryAttendeeLink"
                       FontSize="21"
                       Placeholder="Enter attendee link"/>

            </StackLayout>

            <Button Text="Manual Entry"
                    Grid.Row="1"
                    HorizontalOptions="Center"
                    VerticalOptions="Start"
                    Clicked="ManualEntryButton_OnClicked"/>
            
            <Button Text="Submit"
                    Grid.Row="2"
                    HorizontalOptions="Start"
                    VerticalOptions="Center"
                    Clicked="SubmitButton_OnClicked"/>

        </Grid>

    </ContentPage.Content>
    
</ContentPage>