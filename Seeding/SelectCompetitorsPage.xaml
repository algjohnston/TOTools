<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CS341Project.Seeding.SelectCompetitorsPage"
             Title="Select Competitors">
	<ContentPage.Content>
		<Grid Padding="20" RowSpacing="20" ColumnDefinitions="*" RowDefinitions="Auto, Auto, Auto">

			<Entry x:Name="UpperNameEntry"
                   Placeholder="Name"
                   Margin="0,10,0,0"
                   Grid.Row="0"
                   HorizontalOptions="Fill"
				   />

			<Entry x:Name="LowerNameEntry"
                   Placeholder="Name"
                   Margin="0,10,0,0"
                   Grid.Row="1"
                   HorizontalOptions="FillAndExpand"/>

			<Button Text="Submit"
                    x:Name="SubmitButton"
                    Grid.Row="2"
                    HorizontalOptions="Center"
                    VerticalOptions="End"
                    Clicked="OnSubmitClicked"/>

		</Grid>
	</ContentPage.Content>
</ContentPage>
