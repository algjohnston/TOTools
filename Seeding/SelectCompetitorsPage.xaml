<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:seeding="clr-namespace:TOTools.Seeding"
             x:DataType="seeding:SelectCompetitorsPage"
             x:Class="TOTools.Seeding.SelectCompetitorsPage"
             Title="Select Competitors">
    
    <ContentPage.Content>
        
        <Grid Padding="16, 16, 16, 64" 
              RowSpacing="8" 
              ColumnDefinitions="*" 
              RowDefinitions="Auto, *, Auto">
            
            <Label Text="{Binding Competitors.Count}"/>
            
            <CollectionView Grid.Row="1" 
                            ItemsSource="{Binding Competitors}">
                
                <CollectionView.ItemTemplate>
                    <DataTemplate >
                        <StackLayout Padding="10">
                            <Label Text="{Binding .}"
                                   FontSize="18"
                                   HorizontalOptions="Center" />
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                
            </CollectionView>
            
            <Button Text="Submit"
                    x:Name="SubmitButton"
                    Grid.Row="2"
                    FontAttributes="Bold"
                    HorizontalOptions="Start"
                    VerticalOptions="End"
                    Clicked="OnSubmitClicked"/>
            
        </Grid>
    </ContentPage.Content>
</ContentPage>